<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:text="How to use Refill Card Scanner"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/edit_border_design"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="18dp"
                    android:id="@+id/wayone"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:text=""
                    android:textStyle="normal"
                    android:layout_marginTop="8dp"
                    android:textSize="18dp"
                    android:id="@+id/waytwo"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="18dp"
                    android:id="@+id/waythree"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:text="User manual Guide "
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/use_guide"
            android:background="@drawable/edit_border_design"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:editable="false"
            android:textSize="16dp"
            android:text=""
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:text="Features "
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="16dp"
            android:id="@+id/feature"
            android:background="@drawable/edit_border_design"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:editable="false"
            android:text=""
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/edit_border_design"
            android:layout_height="160dp">
        <TextView
            android:text="About"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:layout_height="160dp">
         <ImageView
             android:layout_weight="2"
             android:padding="10dp"
             android:id="@+id/myanmar"
             android:layout_width="0dp"
             android:layout_height="match_parent" />
            <LinearLayout
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Developed by Mg Kaung  "
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:text="Android Version 1.0  "
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:text="Android Developer , Freelancer  "
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
</LinearLayout>
